<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>Main.html</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>Servlet</servlet-name>
        <servlet-class>controllers.Servlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Servlet</servlet-name>
        <url-pattern>/Servlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddCourse</servlet-name>
        <servlet-class>controllers.ajax_json.AddCourse</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddCourse</servlet-name>
        <url-pattern>/AddCourse</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ListLecture</servlet-name>
        <servlet-class>controllers.ajax_json.ListLecture</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ListLecture</servlet-name>
        <url-pattern>/ListLecture</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SignUp</servlet-name>
        <servlet-class>controllers.ajax_json.SignUp</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SignUp</servlet-name>
        <url-pattern>/SignUp</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>getIdParticipant</servlet-name>
        <servlet-class>controllers.ajax_json.GetIdParticipant</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getIdParticipant</servlet-name>
        <url-pattern>/HTML/getIdParticipant</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>userRegistration</servlet-name>
        <servlet-class>controllers.ajax_json.RegistrationUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userRegistration</servlet-name>
        <url-pattern>/HTML/userRegistration</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteAjaxJson</servlet-name>
        <servlet-class>controllers.ajax_json.DeleteParticipant</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteAjaxJson</servlet-name>
        <url-pattern>/HTML/deleteAjaxJson</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>updateAjaxJson</servlet-name>
        <servlet-class>controllers.ajax_json.UpdateParticipant</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>updateAjaxJson</servlet-name>
        <url-pattern>/HTML/updateAjaxJson</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>addAjaxJson</servlet-name>
        <servlet-class>controllers.ajax_json.AddParticipant</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addAjaxJson</servlet-name>
        <url-pattern>/HTML/addAjaxJson</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>sendAjaxJson</servlet-name>
        <servlet-class>controllers.ajax_json.AjaxJson</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>sendAjaxJson</servlet-name>
        <url-pattern>/HTML/sendAjaxJson</url-pattern>
    </servlet-mapping>
</web-app>